<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recolor.ink - change SVG icon color in seconds</title>
    <% %w{jquery spectrum dropzone recolor}.each do |js| %>
      <script src="js/<%= js %>.js" type="text/javascript"></script>
    <% end %>
    <% %w{normalize spectrum dropzone custom}.each do |style| %>
      <link href="css/<%= style %>.css" rel="stylesheet" type="text/css"></link>
    <% end %>
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
  </head>
  <body>
    <main>
      <h1 id="logo"><img src="/img/logo.png" alt="Recolor.ink"></h1>
      <%= content %>
    </main>
  </body>
</html>
